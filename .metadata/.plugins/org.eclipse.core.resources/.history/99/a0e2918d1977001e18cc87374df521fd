<!-- 오프닝 타이핑 이벤트  -->
<script>
$(document).ready(function() {
  // 텍스트가 모두 출력된 후 1초 뒤에 실행
  setTimeout(function() {
    // wrapper 내용을 페이드인 처리
    $(".content").fadeIn(1000);
  }, 5000); // 1초(1000 밀리초) 대기 후 실행
});
</script>
<script>
    // jQuery를 사용하여 텍스트가 모두 출력된 후 1초 뒤에 텍스트를 페이드아웃하고 요소를 제거
    $(document).ready(function() {
      // 텍스트가 모두 출력된 후 1초 뒤에 실행
      setTimeout(function() {
        $(".typing-demo").fadeOut(1000, function() {
          $(this).remove(); // 페이드아웃 후 요소를 제거
        });
      }, 4000); // 1초(1000 밀리초) 대기 후 실행
    });
  </script>
  <!-- 타이핑 이벤트 끝  -->

</body>
</html>