<script>
$(function() {
    // 모든 h2 태그를 선택하여 배열로 저장합니다.
    var $h1Elements = $("h1");
    
    // 초기에 모든 h2 태그의 크기를 설정합니다.
    $h1Elements.css("font-size", "40px");

    // 1초(1000 밀리초)마다 h2 태그 배열을 순회하면서 글꼴 크기를 작게 설정합니다.
    var index = 0;
    var interval = setInterval(function() {
        if (index < $h1Elements.length) {
            $h1Elements.eq(index).css("font-size", "30px");
            index++;
        } else {
            clearInterval(interval); // 모든 h2 태그를 처리하면 setInterval을 멈춥니다.
        }
    }, 20); // 1초마다 실행
});
</script>


